{
  "name": "opencode-discord-notify",
  "version": "0.2.0",
  "description": "A plugin that posts OpenCode events to a Discord webhook.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README-JP.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
    "format": "prettier . --write",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "1.0.194",
    "@types/node": "^20.19.27",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "opencode",
    "discord",
    "webhook",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/j4rviscmd/opencode-discord-notify"
  }
}
